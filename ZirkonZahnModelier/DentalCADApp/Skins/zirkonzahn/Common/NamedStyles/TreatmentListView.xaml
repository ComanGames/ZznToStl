<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:Microsoft_Windows_Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero">
  <!-- Resource dictionary entries should be defined here. -->

  <ResourceDictionary.MergedDictionaries>
    <ResourceDictionary Source="../Brushes/Common.xaml"/>
    <ResourceDictionary Source="../../Common/Brushes/Common.xaml"/>
	<ResourceDictionary Source="../../Common/BaseControlStyles/ListViewStyle.xaml"/>
  </ResourceDictionary.MergedDictionaries>

 
  <Style x:Key="TreatmentListViewItemStyle" TargetType="{x:Type ListViewItem}" BasedOn="{StaticResource {x:Type ListViewItem}}">
    <Style.Triggers>
      <DataTrigger Binding="{Binding Path=IsUnread}" Value="True" >
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="Blue" />
        <Setter Property="FontSize" Value="12" />
      </DataTrigger>
      <DataTrigger Binding="{Binding Path=Moonlighting}" Value="1" >
        <Setter Property="Foreground" Value="Red" />
      </DataTrigger>
    </Style.Triggers>
  </Style>


</ResourceDictionary>